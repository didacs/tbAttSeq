conda.enabled = true
docker.enabled = false
report.enabled = true
report.overwrite = true

plugins {
    id 'nf-quilt'
}

params {
    manifest {
        name = "tbAttbSeq"
        description = "This pipeline analyzes attB data"
        author = "Thomas Biondi (thomas.biondi@tome.bio)"
        version = "1.0.0"
    }

    samplesheet = './input/samplesheet.csv'
    outdir = 'output'
    attp_oligo = '/data/XL_CS_TB000234_20240111_analysis/thomas/attP.fasta'
    attb_flank_left = "ATATGTATACTT"
    attb_flank_right = "CTAAAGACGATG"
    attp_flank_left = "CGTCCAAACCCA"
    attp_flank_right = "AACGGTAAGAGA"
}
